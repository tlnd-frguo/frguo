<?xml version="1.0" encoding="UTF-8"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.example.aa.service</groupId>
    <artifactId>DemoService</artifactId>
    <version>0.1.0</version>
    <relativePath>/</relativePath>
  </parent>
  <groupId>org.example.aa.service</groupId>
  <artifactId>DemoService-feature</artifactId>
  <version>0.1.0</version>
  <packaging>pom</packaging>
  <name>AA DemoService-${project.version} (0.1,Services) Feature</name>
  <properties>
    <cloud.publisher.skip>false</cloud.publisher.skip>
    <talend.job.name>DemoService</talend.job.name>
    <talend.job.id>_efM-MCASEeGcz7LQVWZhpA</talend.job.id>
    <talend.product.version>7.4.1.20201124_2038-SNAPSHOT</talend.product.version>
    <talend.job.version>0.1</talend.job.version>
    <talend.job.finalName>DemoService-feature-0.1.0</talend.job.finalName>
  </properties>
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.karaf.tooling</groupId>
        <artifactId>karaf-maven-plugin</artifactId>
        <version>4.2.10</version>
        <executions>
          <execution>
            <id>create-kar</id>
            <goals>
              <goal>kar</goal>
            </goals>
            <configuration>
              <resourcesDir>${project.build.directory}/bin</resourcesDir>
              <featuresFile>${basedir}/src/main/resources/feature/feature.xml</featuresFile>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>io.fabric8</groupId>
        <artifactId>fabric8-maven-plugin</artifactId>
        <version>4.0.0</version>
        <executions>
          <execution>
            <id>start</id>
            <phase>none</phase>
            <configuration>
              <skip>true</skip>
            </configuration>
          </execution>
          <execution>
            <id>push-image</id>
            <phase>none</phase>
            <configuration>
              <skip>true</skip>
            </configuration>
          </execution>
        </executions>
        <configuration>
          <skip>true</skip>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-clean-plugin</artifactId>
        <version>3.0.0</version>
        <configuration>
          <skip>true</skip>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.talend.ci</groupId>
        <artifactId>osgihelper-maven-plugin</artifactId>
        <version>7.4.1-SNAPSHOT</version>
        <executions>
          <execution>
            <id>feature-helper</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>generate</goal>
            </goals>
            <configuration>
              <featuresFile>${basedir}/src/main/resources/feature/feature.xml</featuresFile>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>
